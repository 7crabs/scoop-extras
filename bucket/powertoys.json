{
    "version": "0.31.2",
    "description": "A set of utilities for power users to tune and streamline their Windows experience for greater productivity.",
    "homepage": "https://github.com/microsoft/PowerToys",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/microsoft/PowerToys/releases/download/v0.31.2/PowerToysSetup-0.31.2-x64.exe",
            "hash": "8b4a3d4c8d18da10fd11558bd6c8cf195d931576d6e07369e7ac99ba9be7c4c4"
        }
    },
    "installer": {
        "script": [
            "Push-Location $dir",
            "Start-Process $fname ('--extract'+'_msi') -Wait",
            "$msi = Resolve-Path *.msi",
            "$tmp = \"$dir\\_tmp\"",
            "Start-Process msiexec /a,$msi,/qn,TARGETDIR=$tmp -Wait",
            "Move-Item $tmp\\PowerToys\\* $dir",
            "Remove-Item $fname, $msi, $tmp -Recurse",
            "Pop-Location"
        ]
    },
    "shortcuts": [
        [
            "PowerToys.exe",
            "PowerToys"
        ]
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/microsoft/PowerToys/releases/download/v$version/PowerToysSetup-$version-x64.exe"
            }
        }
    }
}
